{% extends 'base.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/contact.css') }}">
{% endblock %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    {# <h1>Register</h1> #}
    <fieldset class="my-5">
        <legend>S'inscrire</legend>

        {{ form_start(registrationForm, {'attr': {'id': 'new_register'}}) }}
        {{ form_errors(registrationForm) }}

        <div class="d-flex justify-content-center">
            <div class="row w-75">
                <div class="col-12">
                        {{ form_label(registrationForm.prenom) }}
                        {{ form_widget(registrationForm.prenom) }}
                        {{ form_errors(registrationForm.prenom) }}
                </div>
                <div class="col-12">
                        {{ form_label(registrationForm.nom) }}
                        {{ form_widget(registrationForm.nom) }}
                </div>
                <div class="col-12">
                        {{ form_label(registrationForm.pseudo) }}
                        {{ form_widget(registrationForm.pseudo) }}
                </div>
                <div class="col-12">
                        {{ form_label(registrationForm.email) }}
                        {{ form_widget(registrationForm.email) }}
                        {{ form_errors(registrationForm.email)}}
                </div>
                <div class="col-12">
                        {{ form_label(registrationForm.plainPassword) }}
                        {{ form_widget(registrationForm.plainPassword) }}
                        {{ form_errors(registrationForm.plainPassword)}}
                </div>
                <div class="col-12">
                        {{ form_label(registrationForm.dateNaissance) }}
                        {{ form_widget(registrationForm.dateNaissance) }}
                </div>
                <div class="col-12">
                        {{ form_label(registrationForm.adresse) }}
                        {{ form_widget(registrationForm.adresse) }}
                </div>
                <div class="col-12">
                        {{ form_label(registrationForm.ville) }}
                        {{ form_widget(registrationForm.ville) }}
                </div>
                <div class="col-12">
                        {{ form_label(registrationForm.codePostal) }}
                        {{ form_widget(registrationForm.codePostal) }}
                </div>
                <div class="col-12 m-5">
                        {{ form_label(registrationForm.agreeTerms) }}
                        {{ form_widget(registrationForm.agreeTerms) }}
                </div>
                <div class="col-12 d-flex justify-content-center">
                        {{ form_label(registrationForm.submit) }}
                        {{ form_widget(registrationForm.submit) }}
                </div>
            </div>
        </div>

        {{ form_end(registrationForm) }}
    </fieldset>

    {# {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }} #}
{% endblock %}
