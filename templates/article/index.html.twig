{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Contenu</th>
                <th>DateArticle</th>
                <th>Tag</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.titre }}</td>
                <td>{{ article.contenu }}</td>
                <td>{{ article.dateArticle ? article.dateArticle|date('Y-m-d') : '' }}</td>
                <td>{{ article.tag ? article.tag|json_encode : '' }}</td>
                <td>
                    <button type="button" class="btn btn-primary w-25 mb-5"><a href="{{ path('article_show', {'id': article.id}) }}">Voir</a></button>
                    <button type="button" class="btn btn-primary w-25 mb-5"><a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a></button>
                    <button type="button" class="btn btn-primary w-25 mb-5"><a href="{{ path('article_delete', {'id': article.id}) }}">Effacer</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Pas d'article disponible.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('article_new') }}">Create new</a> #}
    <button type="button" class="btn btn-primary w-25 mb-5"><a href="{{ path('article_new') }}">Cr√©er Article</a></button>
{% endblock %}
