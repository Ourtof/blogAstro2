{% extends 'base.html.twig' %}

{% block title %}Nouvel Article{% endblock %}

{% block body %}
    <fieldset class="my-5">
        <legend>Ecrire un article</legend>
        {{ form_start(form, {'attr': {'id': 'new_edit_article'}}) }}

        <div class="d-flex justify-content-center">
            <div class="row w-75">
                <div class="col-12">
                    {{ form_label(form.titre) }}
                    {{ form_widget(form.titre) }}
                    {{ form_errors(form.titre) }}
                </div>
                <div class="col-12">
                    {{ form_label(form.contenu) }}
                    {{ form_widget(form.contenu) }}
                </div>
                <div class="col-12">
                    {# TODO : faire marcher tag #}
                        {{ form_label(form.tag) }}
                    {{ form_widget(form.tag) }}
                    {% if tag.nom is defined %}
                    {% endif %}
                </div>
                <div class="col-12 d-flex justify-content-center">
                    {{ form_label(form.submit) }}
                    {{ form_widget(form.submit) }}
                </div>
            </div>
        </div>
        <button type"button" class="btn btn-info"><a href="{{ path('article_index') }}">Retour</a></button>
            {{ form_end(form) }}
    </fieldset>
{% endblock %}
