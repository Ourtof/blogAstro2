{% extends 'base.html.twig' %}

{% block stylesheet %}
    <link rel="stylesheet" href="{{ asset('assets/css/contact.css') }}">
{% endblock %}

{% block title %}Modifier un Tag{% endblock %}

{% block body %}
    <fieldset class="my-5">
        <legend>Modifier un tag</legend>
        {{ form_start(form, {'attr': {'id': 'new_edit_tag'}}) }}

        <div class="d-flex justify-content-center">
            <div class="row w-75">
                <div class="col-12">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="col-12 d-flex justify-content-center">
                    {{ form_label(form.submit) }}
                    {{ form_widget(form.submit) }}
                </div>
            </div>
        </div>
        <button type"button" class="btn btn-info"><a href="{{ path('tag_index') }}">Retour</a></button>
            {{ form_end(form) }}
    </fieldset>
{% endblock %}
