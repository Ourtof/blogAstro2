{% extends 'base.html.twig' %}

{% block stylesheet %}
    {{ parent() }}
{% endblock %}

{% block title %}Nouvelle Illustration{% endblock %}

{% block body %}
    <fieldset class="my-5">
        <legend>Ajouter une illustration</legend>
        {{ form_start(form, {'attr': {'id': 'new_edit_illustration'}}) }}

        <div class="d-flex justify-content-center">
            <div class="row w-75">
                <div class="col-12">
                    {{ form_label(form.nomFichier) }}
                    {{ form_widget(form.nomFichier) }}
                    {{ form_errors(form.nomFichier) }}
                </div>
                <div class="col-12 d-flex justify-content-center">
                    {{ form_label(form.submit) }}
                    {{ form_widget(form.submit) }}
                </div>
            </div>
        </div>
        <button type"button" class="btn btn-info"><a href="{{ path('illustration_index') }}">Retour</a></button>
            {{ form_end(form) }}
    </fieldset>
{% endblock %}
